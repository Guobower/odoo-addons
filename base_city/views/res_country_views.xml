<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_res_city_tree" model="ir.ui.view">
            <field name="name">res.country.city.tree</field>
            <field name="model">res.country.city</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="zip"/>
                    <field name="state_id"/>
                </tree>
            </field>
        </record>

        <record id="view_res_city_form" model="ir.ui.view">
            <field name="name">res.country.city.form</field>
            <field name="model">res.country.city</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="zip"/>
                        <field name="state_id"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_res_city" model="ir.actions.act_window">
            <field name="name">州/市</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.country.city</field>
            <field name="view_type">form</field>
        </record>

        <record id="view_res_district_tree" model="ir.ui.view">
            <field name="name">res.country.district.tree</field>
            <field name="model">res.country.district</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="zip"/>
                    <field name="city_id"/>
                </tree>
            </field>
        </record>

        <record id="view_res_district_form" model="ir.ui.view">
            <field name="name">res.country.district.form</field>
            <field name="model">res.country.district</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="zip"/>
                        <field name="city_id"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_res_district" model="ir.actions.act_window">
            <field name="name">区</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.country.district</field>
            <field name="view_type">form</field>
        </record>

    </data>
</odoo>
